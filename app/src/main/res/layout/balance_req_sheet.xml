<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    >

    <data>

        <variable
            name="addFundOnClickListener"
            type="com.onetechsol.ipayment.databinding.AddFundOnClickListener" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/cl_layout_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10dp"

        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvFundTrnsfterTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:text="Fund Request"
                android:textColor="@color/text_black"
                android:textSize="20sp"
                app:fontFamily="@font/balsamiqsansregular"
                app:layout_constraintBottom_toBottomOf="@+id/ivCancel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/ivCancel" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivCancel"
                android:layout_width="@dimen/_30dp"
                android:layout_height="@dimen/_30dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="16dp"
                android:onClick="@{() -> addFundOnClickListener.closeBottomSheet()}"
                android:src="@drawable/baseline_cancel_24"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clSelectElectricityBoard"
                android:layout_width="0dp"
                android:layout_height="@dimen/_75dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="16dp"
                android:onClick="@{() -> addFundOnClickListener.openAccountList()}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tvFundTrnsfterTitle"
                app:layout_constraintTop_toBottomOf="@+id/tvFundTrnsfterTitle">


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvOperatorTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#F6F7FB"
                    android:elevation="0.1dp"
                    android:padding="@dimen/_4dp"
                    android:shadowColor="#F6F7FB"
                    android:text="Account No"
                    android:textColor="#605D5D"
                    android:textSize="10sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.05"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/mcvSelectOperator"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_55dp"
                    android:elevation="0dp"
                    android:theme="@style/Widget.Material3.CardView.Outlined"
                    app:cardBackgroundColor="#F6F7FB"
                    app:cardElevation="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:strokeColor="@color/bg_color"
                    app:strokeWidth="@dimen/_1dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvAccountName"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_marginStart="6dp"
                            android:fontFamily="@font/balsamiqsansregular"
                            android:gravity="center_vertical"
                            android:text="Select Account No"
                            android:textColor="@color/text_black"
                            android:textSize="14sp"
                            app:layout_constraintBottom_toBottomOf="@+id/ivOpLogo"
                            app:layout_constraintEnd_toStartOf="@+id/tvChangeOp"
                            app:layout_constraintStart_toEndOf="@+id/ivOpLogo"
                            app:layout_constraintTop_toTopOf="@+id/ivOpLogo"
                            app:layout_constraintVertical_bias="0.0" />

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/ivOpLogo"
                            android:layout_width="@dimen/_35dp"
                            android:layout_height="@dimen/_32dp"
                            android:layout_marginStart="4dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.03"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.72"
                            app:shapeAppearanceOverlay="@style/SpecificCornerRound"
                            app:srcCompat="@drawable/account" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvChangeOp"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:backgroundTint="@color/float_transparent"
                            android:fontFamily="@font/balsamiqsansregular"
                            android:gravity="center_vertical"
                            android:overScrollMode="never"
                            android:paddingEnd="5dp"
                            android:scrollbarStyle="insideInset"
                            android:scrollbars="vertical"
                            android:selectAllOnFocus="true"
                            android:text="Change"
                            android:textAllCaps="false"
                            android:textColor="@color/text_black"
                            android:textSize="12sp"
                            android:visibility="visible"
                            app:layout_constraintBottom_toBottomOf="@+id/ivOpLogo"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/ivOpLogo"
                            app:layout_constraintVertical_bias="0.0" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mcvPayMode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:elevation="5dp"
                android:visibility="gone"
                app:cardBackgroundColor="@color/text_shade"
                app:cardCornerRadius="@dimen/_20dp"
                app:cardElevation="@dimen/_5dp"
                app:layout_constraintEnd_toEndOf="@+id/clSelectElectricityBoard"
                app:layout_constraintStart_toStartOf="@+id/clSelectElectricityBoard"
                app:layout_constraintTop_toBottomOf="@+id/clSelectElectricityBoard"
                app:strokeWidth="0dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clPayMode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5dp"
                    android:layout_marginTop="16dp"
                    android:visibility="visible">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btPayViaQR"
                        style="@style/Widget.Material3.Button.TonalButton"
                        android:layout_width="@dimen/_135dp"
                        android:layout_height="@dimen/_55dp"
                        android:onClick="@{() -> addFundOnClickListener.openQRCode()}"
                        android:singleLine="true"
                        android:text="Pay via QR"
                        android:textAllCaps="false"
                        android:textColor="@color/deep_black"
                        android:textSize="@dimen/_10sp"
                        app:backgroundTint="@color/float_transparent"
                        app:cornerRadius="@dimen/_18dp"
                        app:elevation="5dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/btPayViaUpi"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:strokeColor="@color/white" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btPayViaUpi"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="@dimen/_135dp"
                        android:layout_height="@dimen/_55dp"
                        android:elevation="0dp"
                        android:onClick="@{() -> addFundOnClickListener.openUpiId()}"
                        android:singleLine="true"
                        android:text="Pay via Upi Id"
                        android:textAllCaps="false"
                        android:textColor="@color/deep_black"
                        android:textSize="@dimen/_10sp"
                        app:cornerRadius="@dimen/_18dp"
                        app:elevation="@dimen/_5dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/btPayViaQR"
                        app:layout_constraintTop_toTopOf="parent"
                        app:strokeColor="@color/colorPrimaryDark"
                        app:strokeWidth="0dp" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/vpPayMode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/clSelectElectricityBoard"
                app:layout_constraintStart_toStartOf="@+id/clSelectElectricityBoard"
                app:layout_constraintTop_toBottomOf="@+id/mcvPayMode" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>