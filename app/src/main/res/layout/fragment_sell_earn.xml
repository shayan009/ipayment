<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="sellEarnClickListener"
            type="com.onetechsol.ipayment.databinding.SellEarnClickListener" />

        <variable
            name="recommendedProductAdapter"
            type="com.onetechsol.ipayment.ui.adapter.RecommendedProductAdapter" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clMainSideTop"
            android:layout_width="@dimen/_80dp"
            android:layout_height="match_parent"
            android:background="@drawable/side_nav_bg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clMenuTop"
                android:layout_width="0dp"
                android:layout_height="@dimen/_150dp"
                android:layout_marginTop="16dp"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="@+id/rvProducts"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/rvProducts"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/appCompatImageView9"
                    android:layout_width="@dimen/_30dp"
                    android:layout_height="@dimen/_30dp"
                    android:onClick="@{() -> sellEarnClickListener.openDashboard()}"
                    android:src="@drawable/ic_nav_bar"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.46"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.25" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvProducts"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/clMenuTop"
                tools:listitem="@layout/side_menu_item" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvProductItem"
            android:layout_width="0dp"
            android:layout_height="@dimen/_170dp"
            android:layout_marginTop="16dp"
            android:adapter="@{recommendedProductAdapter}"
            android:orientation="horizontal"
            android:visibility="gone"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/clMainSideTop"
            app:layout_constraintTop_toBottomOf="@+id/tvTitleSellEarn"
            tools:listitem="@layout/recommended_product_item" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTitleSellEarn"
            android:layout_width="0dp"
            android:layout_height="22dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/balsamiqsansregular"
            android:text="Credit Card"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:fontFamily="@font/balsamiqsansregular"
            app:layout_constraintBottom_toTopOf="@+id/rvProducts"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.07"
            app:layout_constraintStart_toStartOf="@+id/vpProductItems"
            app:layout_constraintTop_toTopOf="@+id/clMainSideTop"
            app:layout_constraintVertical_bias="0.100000024" />


        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/vpProductItems"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/clMainSideTop"
            app:layout_constraintTop_toBottomOf="@+id/rvProductItem" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>