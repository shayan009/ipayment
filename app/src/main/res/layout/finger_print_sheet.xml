<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="kyc18OtpUIData"
            type="com.onetechsol.ipayment.pojo.Kyc18OtpUIData" />
        <variable
            name="fingerPrintClickListener"
            type="com.onetechsol.ipayment.databinding.FingerPrintClickListener" />

        <import type="android.view.View" />
        
    </data>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/cl_layout_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clFingerPrint"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvFingerPrintTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="@{kyc18OtpUIData.titleText()}"
                    android:textColor="@color/text_black"
                    android:textSize="20sp"
                    app:fontFamily="@font/balsamiqsansregular"
                    app:layout_constraintBottom_toBottomOf="@+id/ivCancel"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/ivCancel" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivCancel"
                    android:layout_width="@dimen/_30dp"
                    android:layout_height="@dimen/_30dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="16dp"
                    android:onClick="@{() -> fingerPrintClickListener.closeBottomSheet()}"
                    android:src="@drawable/baseline_cancel_24"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.93"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvFingerSubTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/sf_pro_display_regular"
                    android:lines="2"
                    android:text="@{kyc18OtpUIData.subTitleText()}"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/_16sp"
                    app:layout_constraintEnd_toEndOf="@+id/ivCancel"
                    app:layout_constraintStart_toStartOf="@+id/tvFingerPrintTitle"
                    app:layout_constraintTop_toBottomOf="@+id/tvFingerPrintTitle" />


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btCapture"
                    style="@style/Widget.Material3.Button.ElevatedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="16dp"
                    android:backgroundTint="@color/colorPrimary_Deep"
                    android:onClick="@{() -> fingerPrintClickListener.captureFingerPrint()}"
                    android:singleLine="true"
                    android:text="Capture"

                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_18sp"
                    android:visibility="visible"
                    app:cornerRadius="@dimen/_18dp"
                    app:elevation="5dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/ivCancel"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvFingerSubTitle"
                    app:strokeColor="@color/white" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>