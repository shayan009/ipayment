<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="bill"
            type="com.onetechsol.ipayment.pojo.Bill" />

        <variable
            name="billItemClickListener"
            type="com.onetechsol.ipayment.databinding.BillItemClickListener" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mcvBillPay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/colorPrimary_Deep"
            app:cardCornerRadius="@dimen/_12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_12dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/appCompatTextView15"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_25dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/balsamiqsansregular"
                        android:gravity="center"
                        android:text="AMOUNT"
                        android:textColor="@color/material_blue_grey_80"
                        android:textSize="@dimen/_13sp"
                        app:layout_constraintEnd_toStartOf="@+id/mcvDueDate"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/balsamiqsansregular"
                        android:text="@{``+bill.amount()}"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/_16sp"
                        app:layout_constraintEnd_toStartOf="@+id/mcvDueDate"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="@+id/appCompatTextView15"
                        app:layout_constraintTop_toBottomOf="@+id/appCompatTextView15" />

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/mcvDueDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:theme="@style/Widget.Material3.CardView.Filled"
                        app:cardBackgroundColor="@color/white"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/appCompatTextView15">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvDueOn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:layout_marginTop="4dp"
                                android:layout_marginEnd="12dp"
                                android:layout_marginBottom="4dp"
                                android:fontFamily="@font/balsamiqsansregular"
                                android:gravity="center"
                                android:text="@{bill.billMonths()}"
                                android:textColor="@color/text_black"
                                android:textSize="@dimen/_11sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.0"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </com.google.android.material.card.MaterialCardView>


                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btPayNow"
                        style="@style/Widget.Material3.Button.ElevatedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_30dp"
                        android:layout_marginTop="8dp"
                        android:onClick="@{() -> billItemClickListener.onClickItem(bill)}"
                        android:singleLine="false"
                        android:text="Pay Now"
                        android:textAllCaps="false"
                        android:textColor="@color/colorPrimary_Deep"
                        android:textSize="9sp"
                        app:cornerRadius="@dimen/_13dp"
                        app:elevation="5dp"
                        app:layout_constraintEnd_toEndOf="@+id/mcvDueDate"
                        app:layout_constraintTop_toBottomOf="@+id/mcvDueDate"
                        app:strokeColor="@color/white" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvDueDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="12dp"
                        android:fontFamily="@font/balsamiqsansbold"
                        android:text="@{`DUE ON `+ bill.dueDate()}"
                        android:textAllCaps="false"
                        android:textColor="@color/material_blue_grey_80"
                        android:textSize="@dimen/_10sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/btPayNow"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="@+id/appCompatTextView15"
                        app:layout_constraintTop_toBottomOf="@+id/tvAmount" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>