<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="beneficiaryModel"
            type="com.onetechsol.ipayment.pojo.BeneficiaryModel" />

        <variable
            name="beneficiaryItemClickListener"
            type="com.onetechsol.ipayment.databinding.BeneficiaryItemClickListener" />

    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:onClick="@{() -> beneficiaryItemClickListener.onClickItem(beneficiaryModel)}"
        android:theme="@style/Widget.Material3.CardView.Outlined"
        app:cardCornerRadius="@dimen/_20dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:strokeWidth="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clBeneficiaryItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/materialCardView"
                android:layout_width="@dimen/_50dp"
                android:layout_height="@dimen/_50dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/report_card_icon_bg"
                android:clickable="true"
                android:elevation="@dimen/_5dp"
                android:focusable="true"
                android:theme="@style/Widget.Material3.CardView.Filled"
                app:cardCornerRadius="@dimen/_20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeWidth="0dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/ivAepsStausIcon"
                        android:layout_width="@dimen/_20dp"
                        android:layout_height="@dimen/_20dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvBeneficiaryName"
                android:layout_width="0dp"
                android:layout_height="@dimen/_20dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="8dp"
                android:ellipsize="end"
                android:gravity="start"
                android:lines="1"
                android:text="@{beneficiaryModel.beneficiaryName()}"
                android:textColor="@color/text_black"
                android:textSize="@dimen/_16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/materialCardView"
                app:layout_constraintTop_toTopOf="@+id/materialCardView"
                app:layout_constraintVertical_bias="0.0" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvBeneficiaryAcc"
                android:layout_width="@dimen/_150dp"
                android:layout_height="@dimen/_20dp"
                android:layout_marginTop="5dp"
                android:gravity="start"
                android:lines="1"
                android:text="@{beneficiaryModel.beneficiaryAccount()}"
                android:textColor="@color/text_black"
                android:textSize="@dimen/_14sp"
                app:layout_constraintStart_toStartOf="@+id/tvBeneficiaryName"
                app:layout_constraintTop_toBottomOf="@+id/tvBeneficiaryName" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvBankName"
                android:layout_width="@dimen/_150dp"
                android:layout_height="@dimen/_25dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:gravity="start"
                android:text="@{beneficiaryModel.beneficiaryBank()}"
                android:textColor="@color/light_text_grey"
                android:textSize="@dimen/_14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/materialCardView"
                app:layout_constraintTop_toBottomOf="@+id/materialCardView" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvVerifiedStatus"
                android:layout_width="@dimen/_60dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="@{beneficiaryModel.beneVerify()}"
                android:textColor="@{beneficiaryModel.beneVerify().equals(`Not Verify`) ? @color/red : @color/color_green }"
                android:textSize="@dimen/_10sp"
                app:layout_constraintBottom_toBottomOf="@+id/tvBankName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/tvBeneficiaryAcc"
                app:layout_constraintTop_toBottomOf="@+id/tvBeneficiaryName"
                app:layout_constraintVertical_bias="0.92" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivVerifiedStatus"
                android:layout_width="@dimen/_15dp"
                android:layout_height="@dimen/_15dp"
                android:layout_marginEnd="4dp"
                app:layout_constraintBottom_toBottomOf="@+id/tvVerifiedStatus"
                app:layout_constraintEnd_toStartOf="@+id/tvVerifiedStatus"
                app:layout_constraintTop_toTopOf="@+id/tvVerifiedStatus"
                app:srcCompat="@drawable/ic_failed" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>