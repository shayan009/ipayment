<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>


        <variable
            name="recommendedProductItem"
            type="com.onetechsol.ipayment.pojo.RecommendedProductItem" />

        <import type="android.view.View" />

        <import type="com.onetechsol.ipayment.R" />

        <import type="android.graphics.Color" />

        <import type="androidx.core.content.ContextCompat" />

        <variable
            name="recommentedProductClickListener"
            type="com.onetechsol.ipayment.databinding.RecommentedProductClickListener" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcvProductItem"
        android:layout_width="@dimen/_150dp"
        android:layout_height="@dimen/_170dp"
        android:layout_marginStart="5dp"
        android:clickable="true"
        android:focusable="true"
        android:onClick="@{(view) -> recommentedProductClickListener.selectProduct(view,recommendedProductItem)}"
        app:cardBackgroundColor="@{Color.parseColor(recommendedProductItem.colorCard())}"
        app:cardCornerRadius="@dimen/_10dp"
        app:cardElevation="@dimen/_5dp"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/ivServiceText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:fontFamily="@font/balsamiqsansregular"
                android:text="@{recommendedProductItem.name()}"
                android:textColor="@{Color.parseColor(recommendedProductItem.colorText())}"
                android:textSize="@dimen/_10sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/mcvCardIcon"
                app:layout_constraintTop_toBottomOf="@+id/mcvCardIcon" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mcvCardIcon"
                android:layout_width="@dimen/_40dp"
                android:layout_height="@dimen/_40dp"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.13999999">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/_25dp"
                        android:layout_height="@dimen/_25dp"
                        android:src="@{recommendedProductItem.imagePath()}"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvRecomEarn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:ellipsize="end"
                android:fontFamily="@font/balsamiqsansbold"
                android:lines="2"
                android:text="@{`Earn up to â‚¹`+recommendedProductItem.amount()}"
                android:textColor="#3C4B52"
                android:textSize="@dimen/_13sp"
                app:layout_constraintEnd_toEndOf="@+id/ivServiceText"
                app:layout_constraintStart_toStartOf="@+id/ivServiceText"
                app:layout_constraintTop_toBottomOf="@+id/ivServiceText" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivNextRec"
                android:layout_width="@dimen/_25dp"
                android:layout_height="@dimen/_25dp"
                android:src="@drawable/ic_baseline_navigate_next_24"
                app:layout_constraintBottom_toBottomOf="@+id/tvRecomEarn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tvRecomEarn"
                app:layout_constraintTop_toTopOf="@+id/tvRecomEarn" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>