<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="insuranceClickListener"
            type="com.onetechsol.ipayment.databinding.InsuranceClickListener" />

        <variable
            name="insuranceProductAdapter"
            type="com.onetechsol.ipayment.ui.adapter.InsuranceProductAdapter" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.screen.dashboard.DashboardActivity">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivBackInsurance"
            android:layout_width="@dimen/_30dp"
            android:layout_height="@dimen/_30dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:onClick="@{() -> insuranceClickListener.goBack()}"
            android:src="@drawable/ic_baseline_keyboard_backspace_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivBackInsurance">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:id="@+id/flContentSlider"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/vpBannerInsurance"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_150dp" />

                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/tabLayout"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_25dp"
                        android:layout_gravity="bottom"
                        app:tabBackground="@drawable/tab_selector"
                        app:tabGravity="center"
                        app:tabIndicatorHeight="0dp" />

                </FrameLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvInsuranceLabel"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_25dp"
                    android:layout_marginTop="24dp"
                    android:text="Insurance Products"
                    android:textAllCaps="false"
                    android:textColor="@color/deep_black"
                    android:textSize="@dimen/_16sp"
                    app:layout_constraintEnd_toEndOf="@+id/flContentSlider"
                    app:layout_constraintStart_toStartOf="@+id/flContentSlider"
                    app:layout_constraintTop_toBottomOf="@+id/flContentSlider" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvInsuranceProducts"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:adapter="@{insuranceProductAdapter}"
                    app:layout_constraintEnd_toEndOf="@+id/flContentSlider"
                    app:layout_constraintStart_toStartOf="@+id/flContentSlider"
                    app:layout_constraintTop_toBottomOf="@+id/tvInsuranceLabel" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>